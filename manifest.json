{
  "manifest_version": 3,
  "name": "onWebTrack",
  "version": "3.0",
  "description": "Track your web activity",
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "activeTab",
    "webNavigation",
    "history"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "dashboard.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}